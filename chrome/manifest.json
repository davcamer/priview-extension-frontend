{
  "manifest_version": 2,
  "name": "Priview",
  "description": "Displays how the current site handles your privacy",
  "version": "0.1",
  //"background_page":"background.html", //not sure if necessary 
  //"options_page": "options.html",

  "icons": { 
	"48": "default_icon.png"
   },

  "permissions": [
    "https://www.priview.org/",
    "http://*/*", 
    "https://*/*"
  ],
  
  "browser_action": {
    "default_title": "This changes color to reflect a site's privacy.",
    "default_icon": "0.png",
    "default_popup": "popup.html"
    //or "popup": "popup.html"????
  }
}